
<input type="hidden" name="ukey" id="ukey" value="{{data.issue.key}}"/>
<input type="hidden" name="reporter" id="reporter" />
<!--BOF App factory menu actionbar -->
<div class="action-bar">
    <a href="/issuetracker/index.jag?appkey={{appkey}}" class="btn-action">
        <span class="fw-stack fw-lg btn-action-ico">
            <i class="fw fw-ring fw-stack-2x"></i>
            <i class="fw fw-left-arrow fw-stack-1x"></i>
        </span> Back to Issues
    </a>
</div><!-- EOF App factory menu actionbar-->

<!-- BOF new UX -->
<div class="container-fluid cloud-container">
        <div class="row">
            <div class="col-md-5 forms">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="issue-id">Issue ID: </label>
                        <input type="text" class="form-control" id="issue-id" value="{{data.issue.key}}"  disabled>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label for="summary">Summary: </label>
                        <input type="text" class="form-control" id="summary" placeholder="Write a summary of your issue" value="{{data.issue.summary}}" disabled>
                    </div>
                </div>
                <div class="col-md-6">
                <div class="form-group">
                    <label for="type">Type: </label>
                 <!--   <select id="type" class="form-control select2" disabled>
                        <option value="{{data.issue.type}}">{{data.issue.type}}</option>
                    </select>
                -->
                 <input type="text" class="form-control" id="type"  value="{{data.issue.issueTypeText}}" disabled>
                </div>
                <div class="form-group">
                    <label for="priority">Priority: </label>
                    <input type="text" class="form-control" id="priority"  value="{{data.issue.issuePriorityText}}" disabled>
                    <!-- <select id="priority" class="form-control select2" disabled>
                        <option value="{{data.issue.priority}}">{{data.issue.priority}}</option>
                    </select> -->
                </div>
                <div class="form-group">
                    <label for="reporter">Reporter: </label>
                    <input type="text" class="form-control" id="reporter"  value="{{data.issue.reporter}}" disabled>
                    <!-- <select id="reporter" class="form-control select2" disabled>
                        <option value="{{data.issue.reporter}}">{{data.issue.reporter}}</option>
                    </select> -->
                </div>
                <div class="form-group">
                        <label for="status">Status: </label>
                         <input type="text" class="form-control" id="status"  value="{{data.issue.issueStatusText}}" disabled>
                      <!--  <select id="status" class="form-control select2">
                            <option value="1">Open</option>
                            <option value="2">Resolved</option>
                            <option value="2">In Progress</option>
                            <option value="2">Closed</option>
                        </select>
                       -->
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="version">Version: </label>
                    <input type="text" class="form-control" id="version"  value="{{versionNumber}}" disabled>
                    <!--<select id="version" class="form-control select2" disabled>
                    {{#each versions}}
                    <option value="{{id}}">{{version}}</option>
                    {{/each}}
                    </select>-->
                    </div>
                <div class="form-group">
                    <label for="severity">Severity: </label>
                    <input type="text" class="form-control" id="severity"  value="{{data.issue.issueSeverityText}}" disabled>
                   <!-- <select id="severity" class="form-control select2" disabled>
                        <option value="{{data.issue.severity}}">{{data.issue.severity}}</option>
                    </select> -->
                </div>
                <div class="form-group">
                    <label for="assignee">Assignee: </label>
                    <input type="text" class="form-control" id="assignee"  value="{{data.issue.assignee}}" disabled>
                    <!-- <select id="assignee" class="form-control select2" disabled>
                        <option value="1"> {{data.issue.assignee}}</option>
                    </select> -->
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label for="assignee">Description: </label>
                    <input type="text" class="form-control" id="description:"  value="{{data.issue.description}}" disabled>
                </div>
            </div>

            <div class="col-md-12">
                <hr class="gray-hr"/>
                <div class="form-group">
                    <label>Comments: </label>
                    <textarea class="form-control" rows="3" id="commentVal" placeholder="Write your comment here" ></textarea>
                    <div class="pull-right">
                        <button type="button" class="cu-btn cu-btn-sm cu-btn-blue" id="commentAdd">
                        <span class="fw-stack fw-lg btn-action-ico">
                            <i class="fw fw-ring fw-stack-2x"></i>
                            <i class="fa fa-comment fa-stack-1x"></i>
                        </span>
                            Add comment
                        </button>
                    </div>
                    <div class="clearfix"></div>
                    <div id="push"></div>
                    {{#each data.comments}}
                    {{#if id}}                    
                    <div class="comment-line">
                        <p id="desc_{{id}}">{{description}}</p>
                        <span class="pull-right">{{#if updatedTime}} {{updatedTime}} {{else}} {{createdTime}} {{/if}}, By {{creator}}</span>
                        <div class="triangle pull-right"></div>
                        <div class="clearfix"></div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="form-group">

                </div>
                <div class="clearfix"></div>
                <div id="push"></div>
                <div id="push"></div>
            </div>
        </div>
    </div><!-- /.container -->
